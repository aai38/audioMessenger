<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".SplashScreenActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textStartScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Willkommen zu unserer App Audio Messenger!"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textAlignment="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/intercepted_notification_logo_container"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/imageStartScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/iconfinder_mic_1055024" />
    </FrameLayout>

</LinearLayout>