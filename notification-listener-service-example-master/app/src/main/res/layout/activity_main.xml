<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image_change_explanaton"
        android:id="@+id/image_change_explanation"
        android:textColor="@color/white"
        android:layout_marginTop="18.5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="18dp"
        android:textSize="18sp"
        android:typeface="monospace"
        android:textAlignment="center" />

    <FrameLayout
        android:id="@+id/intercepted_notification_logo_container"
        android:layout_width="match_parent"
        android:layout_height="298dp">

        <ImageView
            android:id="@+id/intercepted_notification_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/notification_logo"
            android:cropToPadding="false"
            android:src="@drawable/notification_logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="318dp"
            android:layout_height="153dp"
            android:text="TextView"
            tools:text="hehfefhewfhewfhwef" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <Button
            android:id="@+id/buttonEverything"
            android:layout_width="149dp"
            android:layout_height="63dp"
            android:layout_gravity="right"
            android:text="Play All" />

        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="#FFFFFF"
                android:text="Nachricht von"
                android:textColor="#FFFFFF" />

            <SeekBar
                android:id="@+id/speechSpeed"
                android:layout_width="168dp"
                android:layout_height="41dp"
                android:backgroundTint="@color/white"
                android:progressTint="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kontakt"
                android:textColor="#FFFFFF" />

            <SeekBar
                android:id="@+id/contactSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>